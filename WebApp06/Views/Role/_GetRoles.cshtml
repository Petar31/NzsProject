@model List<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="row">
	<div class="col-sm-9">
		<table class="table">
			<tr>
				<th>Roles</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>
						<a class="btn btn-sm btn-danger" asp-action="DeleteRole" asp-route-id="@item.Id">Delete role</a>
					</td>
				</tr>
			}
		</table>
	</div>

</div>
