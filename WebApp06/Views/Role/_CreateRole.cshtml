@model IdentityRole
<h2>CreateRole</h2>

<div class="row">
	<div class="col-md-8">
		<form asp-action="CreateRole">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input type="text" asp-for="Name" id="input" class="form-control" data-val="true" data-val-required="Role name is required" />
				<span asp-validation-for="Name" class="text-danger" id="span"></span>
			</div>
			<div class="form-group">
				<button type="submit" id="addRoleBtn" class="btn btn-info">Add role</button>
			</div>

		</form>
	</div>
	


</div>

<script>
	$("#addRoleBtn").on("click", function () {
		if ($("#input").val() == "") {
			$("#span").html("Role name is required");
			return false;
		}
	})

</script>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
