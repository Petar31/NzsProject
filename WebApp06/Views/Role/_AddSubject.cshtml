@model WebApp06.Models.Test.Subject


<div class="row">
	<div class="col-sm-12">
        <div class="row">
            <div class="col-sm-3">
                <h3 class="text-center">New subject</h3>
            </div>
            <div class="offset-1 col-sm-6">
                <form asp-action="AddSubject">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" id="addSubjectInput" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="addSubjectSubmit" value="Add Subject" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
       
	
	</div>
</div>

<script>
    $("#addSubjectSubmit").on("click", function () {
        if ($("#addSubjectInput").val() == "") {
            $("span.text-danger").html("Subject name is required");
            return false;
        }
    })

   

   
</script>


@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}



